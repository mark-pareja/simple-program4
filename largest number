#include <iostream>

using namespace std;

int main()
{
  int a[3];

  cout<<"Please enter three numbers: ";
  cin>>a[1]>>a[2]>>a[3];

  if(a[1]>a[2]&&a[1]>a[3])
  {
      cout<<a[1]<<" is the largest among the 3 numbers";
  }
  else if(a[2]>a[1]&&a[2]>a[3])
  {
      cout<<a[2]<<" is the largest among the 3 numbers";
  }
  else
  {
      cout<<a[3]<<" is the largest among the 3 numbers";
  }


  return 0;
}
